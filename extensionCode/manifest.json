{
    "manifest_version": 2,
    "name": "BKTV fixes",
    "version": "1.0.0",
    "description": "Fixes the stretched aspect ratio of the fullscreen player. Also fixes the 'continue watching'-feature.",
    "content_scripts": [
        {
            "css": [
                "./fixFullScreen.css"
            ],
            "js": [
                "./fixContinueWatching.js"
            ],
            "matches": [
                "https://watch.bareknuckle.tv/watch/*"
            ]
        }
    ],
    "browser_action": {
        "default_icon": "images/icon.png"
    },
    "icons": {
        "16": "images/icon.png",
        "32": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    }
}
